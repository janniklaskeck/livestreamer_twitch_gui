<Configuration status="WARN" name="lsgui">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [%t] %logger - %msg%n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="${sys:user.home}/.lsgui/lsgui.log"
                     filePattern="${sys:user.home}/.lsgui/lsgui_old_%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [%t] %logger - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="3"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="app.lsgui" level="ALL" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>

</Configuration>